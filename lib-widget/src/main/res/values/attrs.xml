<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerView">
        <attr name="autoSwitch" format="boolean" />
        <attr name="autoSwitchTimeMillis" format="integer" />
        <attr name="unLimitedLoop" format="boolean" />
        <attr name="needIndicator" format="boolean" />
    </declare-styleable>
    <declare-styleable name="IndicatorView">
        <attr name="indicatorWidth" format="dimension" />
        <attr name="indicatorSelectedColor" format="color" />
        <attr name="indicatorNormalColor" format="color" />
        <attr name="indicatorSpaceWidth" format="dimension" />
        <attr name="indicatorNormalHollow" format="boolean" />
        <attr name="hollowIndicatorStrokeWidth" format="dimension" />
    </declare-styleable>

    <!-- Material风格的ProgressBar -->
    <declare-styleable name="ProgressWheel">
        <attr name="progressIndeterminate" format="boolean" />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="float" />
        <attr name="barSpinCycleTime" format="integer" />
        <attr name="circleRadius" format="dimension" />
        <attr name="fillRadius" format="boolean" />
        <attr name="barWidth" format="dimension" />
    </declare-styleable>
</resources>